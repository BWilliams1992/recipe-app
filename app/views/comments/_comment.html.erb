<div class="col-4">
  <div class="card">
    <div class="card-body">
      <h5 clas="card-title"><%= comment.user.username.present? ? comment.user.username : "Annon"  %> </h5>
      <h6 class="card-subtitle"><%= time_ago_in_words(comment.created_at) %> ago </h6>
      <p> <%= comment.body %> </p>
      <% if user_signed_in? && current_user.admin? %>
        <%= link_to "Delete", article_comment_path(@article, comment), class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure?" }%>
      <% end %>
    </div>
  </div>
</div>