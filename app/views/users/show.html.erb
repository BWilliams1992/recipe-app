<div class="card">
  <h5 class="card-header"><%=  @user.username? ? @user.username : "Profile" %></h5>
  <div class="card-body">
    <% if can? :manage, @user %>
      <div class= "border-bottom mb-2">
        <%= link_to 'Edit account', edit_user_registration_path(@user), class:"btn btn-lg btn-warning" %>
        <%= link_to 'Delete account', user_registration_path(@user), class:"btn btn-lg btn-danger", method: :delete %>
      </div>
    <% end %>
    <h5> Recipes: </h5>
    <ul>
    <% @user.recipes.each do |recipe| %>
      <li><%= link_to recipe.title, recipe %></li>
    <% end %>
    </ul>
  </div>
</div>



