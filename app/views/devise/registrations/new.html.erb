<h1>Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group ">
    <%= f.label :username, class: "col-form-label-lg" %><br />
    <%= f.text_field :username, class: "form-control col-8" %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-form-label-lg" %><br />
    <%= f.email_field :email, class: "form-control col-8", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-form-label-lg" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control col-8", autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-form-label-lg" %><br />
    <%= f.password_field :password_confirmation, class: "form-control col-8", autocomplete: "new-password" %>
  </div>

  <div class="form-group">
    <%= f.label :bio, class: "col-form-label-lg" %><br />
    <%= f.text_area :bio, class: "form-control col-8", rows: "5" %>
  </div>

  <div class="form-group">
    <%= f.label :avatar, class: "col-form-label-lg" %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class:"btn btn-lg btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
