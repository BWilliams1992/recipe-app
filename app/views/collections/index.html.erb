<h1> Listing collections </h1>
<% @collections.each do |collection| %>
  <div class ="bg-dark-orange p-2 mb-4 col">
    <h2><%= link_to collection.title, collection, class:"badge badge-pill badge-primary border-bottom" %><br /></h2>
    <%= collection.description if collection.description.present? %>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

      <div class="carousel-inner">
        <% collection.recipes.in_groups_of(3, false).each_with_index do |recipes, recipes_index| %>
        <div class="carousel-item<%= " active" if recipes_index == 0  %> ">
          <div class="row justify-content-center">
            <% recipes.each do |recipe| %>
              <%= render 'recipes/recipe-card', recipe: recipe %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
<% end %>

