<%= render 'shared/errors', obj:@collection %>
<%= form_with(model: @collection ,class:"mt-4", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :title, class:"col-form-label col-2" %>
    <%= f.text_field :title, class: "form-control col-10" %>
  </div>

  <div class="form-group row">
    <%= f.label :description, class:"col-form-label col-2" %>
    <%= f.text_area :description, class: "form-control col-10", rows: "5" %>
  </div>
  <div class="form group row justify-content-end">
    <%= f.submit class: "btn btn-lg btn-primary" %>
  </div>
<% end %>