<div class="modal custom fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
   <div class="modal-dialog modal-dialog-centered" role="document">
     <div class="modal-content bg-light-orange border border-dark ">
       <div class="modal-header bg-dark-orange border-dark">
        <h2 class="text-center">Login</h2>
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
           &times;       
         </button>
       </div>
       <div class="modal-body">  
         <%= form_for(:user, :url => session_path(:user)) do |f| %>
           <div class="form-group">
             <%= f.text_field :email, class:"form-control",placeholder: "Email", value: nil %>
           </div>
           <div class="form-group">
             <%= f.password_field :password,label:"Password", class:"form-control", placeholder:"Password"%>
           </div>
           <%= f.submit 'Login', class:"form-control btn btn-lg btn-primary" %>
           <%= f.check_box :remember_me, label: "Remember me", value: "true" %>
           <%= f.label :remember_me %>
         <% end %>
       </div>
     </div>
   </div>
</div>