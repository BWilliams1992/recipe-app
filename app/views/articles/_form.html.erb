<div class="col-10">
  <%= render 'shared/errors', obj:@article %>
  <%= form_with(model: @article ,class:"mt-4", local: true) do |f| %>
    <div class="form-group row">
      <%= f.label :title, class:"col-form-label col-2" %>
      <%= f.text_field :title, class: "form-control col-10" %>
    </div>

    <div class="form-group row">
      <%= f.label :body, class:"col-form-label col-2" %>
      <%= f.text_area :body, class: "form-control col-10", rows: "5" %>
    </div>

    <div class="form-group row">
      <%= f.label :pinned, class:"col-form-label col-2" %>
      <%= f.check_box :pinned %>
    </div>

    <div class="form group row justify-content-end">
      <%= f.submit class: "btn btn-lg btn-primary" %>
    </div>
  <% end %>
</div>